<%- include('../header') %>

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
        --light-gray: #f8f9fa;
        --dark-gray: #343a40;
        --text-color: #2c3e50;
        --text-light: #7f8c8d;
        --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.15);
        --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.2);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    body {
        background-color: #f5f7fa;
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-wrapper {
        padding-top: 20px;
    }

    /* Page Header */
    .page-breadcrumb {
        background-color: white !important;
        padding: 20px 0 !important;
        margin-bottom: 30px;
        box-shadow: var(--shadow-sm);
        border-radius: 8px;
    }

    .page-title {
        font-weight: 700;
        color: var(--primary-color) !important;
        font-size: 28px;
        margin-bottom: 0;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        color: var(--secondary-color);
        text-decoration: none;
        transition: var(--transition);
    }

    .breadcrumb-item a:hover {
        color: var(--primary-color);
        text-decoration: underline;
    }

    .breadcrumb-item.active {
        color: var(--text-light);
    }

    /* Search Bar */
    .custom-search-wrapper {
        margin: 40px 0 30px;
    }

    .custom-search-form {
        display: flex;
        align-items: center;
        background-color: white;
        border-radius: 50px;
        padding: 5px;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        border: 1px solid #e0e0e0;
    }

    .custom-search-form:focus-within {
        box-shadow: var(--shadow-lg);
        border-color: var(--secondary-color);
    }

    .custom-search-form input.form-control {
        flex-grow: 1;
        border: none;
        outline: none;
        font-size: 16px;
        padding: 12px 20px;
        background: transparent;
        color: var(--text-color);
        border-radius: 50px;
    }

    .custom-search-form input::placeholder {
        color: var(--text-light);
        font-style: italic;
    }

    .custom-search-form .btn {
        border-radius: 50px;
        padding: 10px 25px;
        font-size: 15px;
        font-weight: 600;
        transition: var(--transition);
        background-color: var(--secondary-color);
        color: white;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .custom-search-form .btn:hover {
        background-color: #2980b9;
        transform: translateY(-1px);
    }

    /* Category Filters */
    .category-filters {
        margin-bottom: 40px;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: var(--shadow-sm);
    }

    .category-btn {
        border-radius: 30px;
        padding: 10px 25px;
        font-weight: 600;
        text-transform: capitalize;
        font-size: 14px;
        transition: var(--transition);
        margin: 0 10px 10px 0;
        border: none;
        letter-spacing: 0.5px;
        box-shadow: var(--shadow-sm);
    }

    .category-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .category-btn:active {
        transform: translateY(0);
    }

    .category-btn-all {
        background-color: var(--dark-gray);
        color: white;
    }

    /* Product Cards */
    .product-grid {
        margin-top: 20px;
    }

    .product-card {
        border-radius: 12px;
        background-color: white;
        transition: var(--transition);
        overflow: hidden;
        border: none;
        margin-bottom: 25px;
        box-shadow: var(--shadow-sm);
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
    }

    .product-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background-color: var(--accent-color);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        z-index: 2;
    }

    .wishlist-icon {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.9);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 2;
        transition: var(--transition);
        color: #ccc;
        font-size: 18px;
        box-shadow: var(--shadow-sm);
    }

    .wishlist-icon:hover {
        color: var(--accent-color);
        transform: scale(1.1);
    }

    .wishlist-icon.active {
        color: var(--accent-color);
    }
    .product-card{
        margin-bottom: 30px;
    }
    .product-img-container {
        height: 200px;
        overflow: hidden;
        position: relative;
        background-color: #f9f9f9;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: var(--transition);
        padding: 20px;
    }

    .product-card:hover .product-img {
        transform: scale(1.05);
    }

    .product-info {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 17px;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 8px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.3;
    }

    .product-category {
        font-size: 13px;
        color: var(--secondary-color);
        margin-bottom: 10px;
        font-weight: 500;
    }

    .product-desc {
        font-size: 14px;
        color: var(--text-light);
        margin-bottom: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
        line-height: 1.5;
    }

    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
    }

    .product-price {
        font-weight: 700;
        color: var(--primary-color);
        font-size: 18px;
    }

    .view-btn {
        background-color: var(--secondary-color);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 30px;
        font-size: 14px;
        font-weight: 600;
        transition: var(--transition);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .view-btn:hover {
        background-color: #2980b9;
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 50px 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: var(--shadow-sm);
    }

    .empty-state i {
        font-size: 60px;
        color: var(--text-light);
        margin-bottom: 20px;
    }

    .empty-state h4 {
        color: var(--primary-color);
        margin-bottom: 15px;
    }

    .empty-state p {
        color: var(--text-light);
        max-width: 500px;
        margin: 0 auto 25px;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
        .product-img-container {
            height: 180px;
        }
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 24px;
        }

        .custom-search-form {
            flex-direction: column;
            padding: 15px;
            border-radius: 12px;
        }

        .custom-search-form input.form-control {
            width: 100%;
            margin-bottom: 10px;
        }

        .custom-search-form .btn {
            width: 100%;
        }

        .category-btn {
            width: calc(50% - 10px);
            margin-right: 5px;
            margin-left: 5px;
        }

        .product-img-container {
            height: 160px;
        }
    }

    @media (max-width: 576px) {
        .product-img-container {
            height: 140px;
        }

        .product-info {
            padding: 15px;
        }

        .product-title {
            font-size: 16px;
        }

        .product-price {
            font-size: 16px;
        }

        .view-btn {
            padding: 6px 15px;
            font-size: 13px;
        }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h2 class="page-title">Our Products</h2>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Products</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="custom-search-wrapper">
            <form method="GET" action="/product/view-product" class="custom-search-form">
                <input type="text" name="search" class="form-control" placeholder="Search for products..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>">
                <button type="submit" class="btn">Search</button>
            </form>
        </div>

        <!-- Category Filters -->
        <div class="category-filters text-center">
            <% const colors=['primary', 'success', 'danger', 'info', 'warning', 'dark']; %>
            <a class="btn btn-dark category-btn category-btn-all" href="/product/view-product">All Products</a>
            <% categories.forEach((category, index)=> {
                const colorClass = colors[index % colors.length];
                %>
                <a class="btn btn-<%= colorClass %> category-btn"
                    href="/product/view-product?category=<%= category._id %>">
                    <%= category.category %>
                </a>
                <% }); %>
        </div>

        <!-- Product Grid -->
        <div class="product-grid">
            <% if (allProducts.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <h4>No Products Found</h4>
                    <p>We couldn't find any products matching your criteria. Try adjusting your search or browse our full
                        catalog.</p>
                    <a href="/product/view-product" class="btn btn-primary">View All Products</a>
                </div>
                <% } else { %>
                    <div class="row">
                        <% allProducts.forEach((product)=> { %>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="product-card">

                                    <% if (product.discount) { %>
                                        <span class="product-badge"><%= product.discount %>% OFF</span>
                                        <% } %>
                                            <div class="product-img-container">
                                                <img src="<%= product.productImage %>" alt="<%= product.title %>"
                                                    class="product-img">
                                            </div>
                                            <div class="product-info">
                                                <h6 class="product-title">
                                                    <%= product.title %>
                                                </h6>
                                                <p class="product-category">
                                                    <%= product.category?.category || 'Uncategorized' %>
                                                </p>
                                                <p class="product-desc">
                                                    <%= product.desc.length> 80 ? product.desc.substring(0, 80) + '...' :
                                                        product.desc %>
                                                </p>
                                                <div class="product-footer">
                                                    <span class="product-price">â‚¹<%= product.price %></span>
                                                    <a href="/product/single-product/<%= product._id %>"
                                                        class="view-btn">View</a>
                                                </div>
                                            </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </div>
    </div>
</div>

<%- include('../footer') %>

