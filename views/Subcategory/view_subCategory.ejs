<%- include('../header') %>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-breadcrumb {
        background: #f8f9fa;
        padding: 15px 25px;
        border-bottom: 1px solid #dee2e6;
    }

    .page-title {
        color: #343a40;
        margin: 0;
    }

    .breadcrumb {
        background-color: transparent;
        margin: 0;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .card-body {
        padding: 20px 30px;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        color: #495057;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        overflow: hidden;
    }

    .table thead {
        background-color: #333;
        color: white;
    }

    .table th,
    .table td {
        padding: 12px;
        vertical-align: middle;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f2f6fc;
    }

    .table img {
        height: 60px;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
    }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: #fff;
    }

    .btn i {
        margin-right: 6px;
    }

    .btn:hover {
        opacity: 0.9;
        transform: scale(1.02);
        transition: all 0.2s ease;
    }

    .action-icons {
        display: flex;
        gap: 10px;
    }
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Sub Category Table</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sub Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="padding: 30px;">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sub Category Information</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Category Name</th>
                                    <th>Category Image</th>
                                    <th>Sub Category Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% subCategories.map((subCate, i) => { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= subCate.category.category %></td>
                                        <td>
                                            <img src="<%= subCate.category.categoryImage %>" alt="Category Image" />
                                        </td>
                                        <td><%= subCate.subCategory %></td>
                                        <td class="action-icons">
                                            <a href="/subCategory/edit-subcategory/<%= subCate._id %>" 
                                               class="btn btn-sm btn-primary" 
                                               title="Edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="/subCategory/delete-subcategory/<%= subCate._id %>" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('Are you sure you want to delete this subcategory?')" 
                                               title="Delete">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
